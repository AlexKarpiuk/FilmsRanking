@using FilmsRanking.Data.Enum
@using FilmsRanking.ViewModels
@model CreateMovieViewModel

<form method="post" asp-action="Create" enctype="multipart/form-data">
    @* <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" /> *@
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Director">Director</label>
        <input asp-for="Director" class="form-control" placeholder="Director">
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating IMDb</label>
        <input asp-for="Rating" class="form-control" placeholder="Rating">
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration">Duration</label>
        <input asp-for="Duration" class="form-control" placeholder="Duration">
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Type</label>
        <select asp-for="Type" asp-items="@Html.GetEnumSelectList<MovieTypes>()" class="form-control form-control-lg">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre">Genre</label>
        <select asp-for="Genre" asp-items="@Html.GetEnumSelectList<Genre>()" class="form-control form-control-lg">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="PosterImageUrl">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
